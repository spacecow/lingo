<%= simple_form_for presenter.translation, html:{class:presenter.translation.klass(active)} do |f| %>
  <%= f.simple_fields_for :languages do |f2| %>
    <%= render "languages/fields", f:f2 %>
  <% end %>
  <div class="clear"></div>
  <%= f.input :x1%>
  <%= f.input :y1%>
  <%= f.input :x2%>
  <%= f.input :y2%>
  <%= hidden_field_tag :page_id, presenter.page.id %>
  <%= hidden_field_tag :project_id, presenter.project.id %>
  <%= f.button :submit, class: :submit %>
  <%= link_to 'Comment', '', id:'comment' %>
  <div class="button_placeholder"></div>
<% end %>
